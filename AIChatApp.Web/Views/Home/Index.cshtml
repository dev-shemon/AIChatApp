<!-- Landing Page: Index.cshtml -->
@{
    ViewData["Title"] = "Welcome";
}


<div class="max-w-7xl mx-auto px-4">


    <!-- HERO SECTION -->
    <section class="text-center py-20">
        <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900 mb-6">Welcome to <span class="text-indigo-600">AIChatApp</span></h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto mb-10">
            A modern chatting platform where real users connect seamlessly and enjoy powerful AI-assisted features.
        </p>


        <div class="space-x-4">
            <a asp-controller="Auth" asp-action="Register" class="px-6 py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition">Get Started</a>
            <a asp-controller="Auth" asp-action="Login" class="px-6 py-3 bg-gray-200 text-gray-800 rounded-xl hover:bg-gray-300 transition">Sign In</a>
        </div>
    </section>


    <!-- FEATURES SECTION -->
    <section class="py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">


        <div class="bg-white p-8 rounded-2xl shadow hover:shadow-lg transition">
            <div class="text-indigo-600 text-4xl mb-4">💬</div>
            <h3 class="text-xl font-semibold mb-2">Real-time Chat</h3>
            <p class="text-gray-600">Chat instantly with other users using our fast, secure messaging system.</p>
        </div>


        <div class="bg-white p-8 rounded-2xl shadow hover:shadow-lg transition">
            <div class="text-indigo-600 text-4xl mb-4">🤖</div>
            <h3 class="text-xl font-semibold mb-2">AI-powered Assistant</h3>
            <p class="text-gray-600">Get instant help from integrated AI. Summaries, suggestions, and more.</p>
        </div>


        <div class="bg-white p-8 rounded-2xl shadow hover:shadow-lg transition">
            <div class="text-indigo-600 text-4xl mb-4">🔐</div>
            <h3 class="text-xl font-semibold mb-2">Secure Authentication</h3>
            <p class="text-gray-600">Reliable email verification and encryption keep your account safe.</p>
        </div>


        <div class="bg-white p-8 rounded-2xl shadow hover:shadow-lg transition">
            <div class="text-indigo-600 text-4xl mb-4">📁</div>
            <h3 class="text-xl font-semibold mb-2">File Sharing</h3>
            <p class="text-gray-600">Send images, videos, and documents effortlessly in chats.</p>
        </div>


        <div class="bg-white p-8 rounded-2xl shadow hover:shadow-lg transition">
            <div class="text-indigo-600 text-4xl mb-4">👤</div>
            <h3 class="text-xl font-semibold mb-2">User Profiles</h3>
            <p class="text-gray-600">Explore other user profiles to know more about who you're chatting with.</p>
        </div>


        <div class="bg-white p-8 rounded-2xl shadow hover:shadow-lg transition">
            <div class="text-indigo-600 text-4xl mb-4">⚡</div>
            <h3 class="text-xl font-semibold mb-2">Lightning Fast</h3>
            <p class="text-gray-600">Optimized for performance and smooth user experience across devices.</p>
        </div>


    </section>


</div>