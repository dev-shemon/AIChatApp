@{
    ViewData["Title"] = "Welcome";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <section class="text-center py-24 md:py-32">
        <h1 class="text-5xl md:text-7xl font-bold tracking-tight text-gray-900 mb-8">
            Connect with <span class="text-black underline decoration-4 underline-offset-4 decoration-gray-300">Intelligence.</span>
        </h1>
        <p class="text-xl text-gray-500 max-w-2xl mx-auto mb-12 leading-relaxed">
            A minimal chatting platform where real connections meet powerful AI assistance. Secure, fast, and purely focused on content.
        </p>

        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a asp-controller="Auth" asp-action="Register" class="px-8 py-4 bg-black text-white text-sm font-semibold rounded-full hover:bg-gray-800 transition-all duration-200 shadow-sm">
                Get Started
            </a>
            <a asp-controller="Auth" asp-action="Login" class="px-8 py-4 bg-white text-gray-900 border border-gray-200 text-sm font-semibold rounded-full hover:border-gray-400 hover:bg-gray-50 transition-all duration-200">
                Sign In
            </a>
        </div>
    </section>

    <section class="py-20 border-t border-gray-100">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">

            <div class="group">
                <div class="mb-4 inline-flex items-center justify-center h-12 w-12 rounded-lg bg-gray-50 text-black group-hover:bg-black group-hover:text-white transition-colors duration-300">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Real-time Chat</h3>
                <p class="text-gray-500 leading-relaxed">Chat instantly with other users using our fast, WebSocket-powered messaging system.</p>
            </div>

            <div class="group">
                <div class="mb-4 inline-flex items-center justify-center h-12 w-12 rounded-lg bg-gray-50 text-black group-hover:bg-black group-hover:text-white transition-colors duration-300">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">AI Assistant</h3>
                <p class="text-gray-500 leading-relaxed">Get instant help from integrated AI. Summaries, writing suggestions, and code help.</p>
            </div>

            <div class="group">
                <div class="mb-4 inline-flex items-center justify-center h-12 w-12 rounded-lg bg-gray-50 text-black group-hover:bg-black group-hover:text-white transition-colors duration-300">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Secure & Private</h3>
                <p class="text-gray-500 leading-relaxed">Reliable email verification and industry-standard encryption keep your data safe.</p>
            </div>

            <div class="group">
                <div class="mb-4 inline-flex items-center justify-center h-12 w-12 rounded-lg bg-gray-50 text-black group-hover:bg-black group-hover:text-white transition-colors duration-300">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Media Sharing</h3>
                <p class="text-gray-500 leading-relaxed">Send high-quality images, videos, and documents effortlessly in your chats.</p>
            </div>

            <div class="group">
                <div class="mb-4 inline-flex items-center justify-center h-12 w-12 rounded-lg bg-gray-50 text-black group-hover:bg-black group-hover:text-white transition-colors duration-300">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">User Profiles</h3>
                <p class="text-gray-500 leading-relaxed">Explore detailed user profiles to know exactly who you are connecting with.</p>
            </div>

            <div class="group">
                <div class="mb-4 inline-flex items-center justify-center h-12 w-12 rounded-lg bg-gray-50 text-black group-hover:bg-black group-hover:text-white transition-colors duration-300">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">High Performance</h3>
                <p class="text-gray-500 leading-relaxed">Optimized architecture ensures a smooth, lag-free experience across all devices.</p>
            </div>

        </div>
    </section>
</div>