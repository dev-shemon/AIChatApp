@model AIChatApp.Application.DTOs.ProfileDetailsDto

@{
    ViewData["Title"] = "Profile";

    // Image logic
    string defaultImageUrl = "https://ui-avatars.com/api/?name=" + Uri.EscapeDataString(Model.FullName ?? "User") + "&background=6366f1&color=fff";
    string finalImageSource = string.IsNullOrEmpty(Model.ProfileImageUrl) ? defaultImageUrl : Model.ProfileImageUrl;
}

<div class="min-h-screen bg-slate-50 pb-24">
    <!-- Header/Hero Section -->
    <div class="bg-white border-b border-slate-100 pt-24 pb-12">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <div class="relative inline-block group">
                <!-- Decorative Ring -->
                <div class="absolute -inset-3 rounded-full bg-gradient-to-tr from-indigo-500 to-purple-500 opacity-20 blur-sm group-hover:opacity-40 transition-opacity duration-500"></div>

                <div class="relative">
                    <img src="@finalImageSource"
                         alt="@Model.FullName"
                         class="h-40 w-40 rounded-[3rem] object-cover ring-4 ring-white shadow-2xl mx-auto transition-transform duration-500 group-hover:scale-[1.02]"
                         onerror="this.onerror=null;this.src='@defaultImageUrl';" />

                    @if (Model.IsVerified)
                    {
                        <div class="absolute -bottom-2 -right-2 bg-indigo-600 rounded-2xl p-2.5 shadow-xl shadow-indigo-200 border-4 border-white" title="Verified Account">
                            <i class="fa-solid fa-check-double text-white text-sm"></i>
                        </div>
                    }
                </div>
            </div>

            <h1 class="mt-8 text-4xl font-black tracking-tight text-slate-900">@Model.FullName</h1>
            <p class="text-indigo-600 font-black text-xs uppercase tracking-[0.3em] mt-2">@@@Model.UserName</p>
        </div>
    </div>

    <!-- Navigation Bar -->
    <div class="sticky top-0 bg-white/80 backdrop-blur-md z-30 border-b border-slate-100 shadow-sm shadow-slate-200/50">
        <div class="max-w-5xl mx-auto px-4">
            <nav class="flex justify-center -mb-px space-x-4 sm:space-x-10" aria-label="Tabs">
                <a asp-controller="Profile" asp-action="EditProfile"
                   class="group inline-flex items-center py-5 px-1 border-b-2 border-transparent text-[11px] font-black uppercase tracking-widest text-slate-400 hover:text-indigo-600 hover:border-indigo-600 transition-all duration-300">
                    <i class="fa-solid fa-pen-to-square mr-2 text-sm opacity-50 group-hover:opacity-100 transition-opacity"></i>
                    Edit
                </a>

                <a asp-controller="Profile" asp-action="ChangeProfilePicture"
                   class="group inline-flex items-center py-5 px-1 border-b-2 border-transparent text-[11px] font-black uppercase tracking-widest text-slate-400 hover:text-indigo-600 hover:border-indigo-600 transition-all duration-300">
                    <i class="fa-solid fa-camera mr-2 text-sm opacity-50 group-hover:opacity-100 transition-opacity"></i>
                    Photo
                </a>

                <a asp-controller="Profile" asp-action="ChangePassword"
                   class="group inline-flex items-center py-5 px-1 border-b-2 border-transparent text-[11px] font-black uppercase tracking-widest text-slate-400 hover:text-indigo-600 hover:border-indigo-600 transition-all duration-300">
                    <i class="fa-solid fa-key mr-2 text-sm opacity-50 group-hover:opacity-100 transition-opacity"></i>
                    Security
                </a>

                <a asp-controller="Profile" asp-action="ConfirmDelete"
                   class="group inline-flex items-center py-5 px-1 border-b-2 border-transparent text-[11px] font-black uppercase tracking-widest text-slate-400 hover:text-rose-600 hover:border-rose-600 transition-all duration-300">
                    <i class="fa-solid fa-trash-can mr-2 text-sm opacity-50 group-hover:opacity-100 transition-opacity"></i>
                    Archive
                </a>
            </nav>
        </div>
    </div>

    <!-- Content Area -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 mt-12">
        <div class="bg-white rounded-[2.5rem] border border-slate-100 shadow-xl shadow-slate-200/40 overflow-hidden">
            <div class="p-8 md:p-12">
                <h3 class="text-xs font-black text-slate-900 uppercase tracking-[0.2em] mb-10 pb-4 border-b border-slate-50">Account Information</h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-12">
                    <!-- Data Point -->
                    <div class="group">
                        <dt class="text-[10px] uppercase tracking-[0.2em] font-black text-slate-400 mb-2">Display Name</dt>
                        <dd class="flex items-center text-slate-900 font-bold group-hover:translate-x-1 transition-transform">
                            <i class="fa-solid fa-signature text-indigo-200 mr-3 text-lg"></i>
                            @Model.FullName
                        </dd>
                    </div>

                    <!-- Data Point -->
                    <div class="group">
                        <dt class="text-[10px] uppercase tracking-[0.2em] font-black text-slate-400 mb-2">Email Address</dt>
                        <dd class="flex items-center text-slate-900 font-bold group-hover:translate-x-1 transition-transform">
                            <i class="fa-solid fa-envelope text-indigo-200 mr-3 text-lg"></i>
                            @Model.Email
                        </dd>
                    </div>

                    <!-- Data Point -->
                    <div class="group">
                        <dt class="text-[10px] uppercase tracking-[0.2em] font-black text-slate-400 mb-2">Username</dt>
                        <dd class="flex items-center text-slate-900 font-bold group-hover:translate-x-1 transition-transform">
                            <i class="fa-solid fa-at text-indigo-200 mr-3 text-lg"></i>
                            @Model.UserName
                        </dd>
                    </div>

                    <!-- Data Point -->
                    <div class="group">
                        <dt class="text-[10px] uppercase tracking-[0.2em] font-black text-slate-400 mb-2">Member Since</dt>
                        <dd class="flex items-center text-slate-900 font-bold group-hover:translate-x-1 transition-transform">
                            <i class="fa-solid fa-calendar-check text-indigo-200 mr-3 text-lg"></i>
                            @Model.RegisteredDate.ToString("MMMM yyyy")
                        </dd>
                    </div>

                    <!-- Data Point: Status -->
                    <div class="md:col-span-2 p-6 rounded-3xl bg-slate-50 border border-slate-100 flex items-center justify-between">
                        <div class="flex items-center gap-4">
                            <div class="h-12 w-12 rounded-2xl bg-white shadow-sm flex items-center justify-center">
                                @if (Model.IsVerified)
                                {
                                    <i class="fa-solid fa-certificate text-emerald-500 text-xl"></i>
                                    
                                }
                                else
                                {
                                    <i class="fa-solid fa-shield-exclamation text-amber-500 text-xl"></i>
                                }
                            </div>
                            <div>
                                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Verification Status</p>
                                <p class="text-sm font-black text-slate-900">
                                    @(Model.IsVerified ? "Fully Verified Account" : "Pending Verification")
                                </p>
                            </div>
                        </div>

                        @if (!Model.IsVerified)
                        {
                            <button class="px-5 py-2.5 bg-indigo-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-indigo-700 transition-colors">
                                Resend Email
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Footnote -->
        <div class="mt-12 text-center">
            <p class="text-[10px] text-slate-400 font-bold uppercase tracking-[0.3em] flex items-center justify-center gap-3">
                <span class="h-px w-8 bg-slate-200"></span>
                Digital Identity ID: @Model.UserName.GetHashCode().ToString("X")
                <span class="h-px w-8 bg-slate-200"></span>
            </p>
        </div>
    </div>
</div>