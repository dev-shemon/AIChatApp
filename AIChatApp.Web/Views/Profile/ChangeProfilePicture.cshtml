@model AIChatApp.Application.DTOs.UpdateProfilePictureDto

@{
    ViewData["Title"] = "Update Photo";

    // Use the current profile picture if available, otherwise show a placeholder
    string imageSource = string.IsNullOrEmpty(Model.CurrentProfilePictureUrl)
        ? $"https://ui-avatars.com/api/?name=User&background=6366f1&color=fff&size=256"
        : Model.CurrentProfilePictureUrl;
}

<div class="min-h-[80vh] flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-slate-50">
    <div class="w-full max-w-md">
        <!-- Header Section -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-600 rounded-[1.5rem] shadow-xl shadow-indigo-100 mb-6 transition-transform hover:scale-110 duration-500">
                <i class="fa-solid fa-camera-retro text-white text-2xl"></i>
            </div>
            <h2 class="text-3xl font-black tracking-tight text-slate-900">Update Photo</h2>
            <p class="mt-3 text-sm text-slate-500 font-medium">Choose a high-quality image for your digital identity.</p>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-[2.5rem] p-8 md:p-10 border border-slate-100 shadow-2xl shadow-slate-200/50">
            <form asp-controller="Profile" asp-action="ChangeProfilePicture" method="post" enctype="multipart/form-data" class="space-y-8">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="CurrentProfilePictureUrl" />

                <!-- Error Summary -->
                <div asp-validation-summary="ModelOnly" class="p-4 rounded-xl bg-rose-50 text-rose-600 text-xs font-bold border border-rose-100 text-center"></div>

                <!-- Avatar Preview Area -->
                <div class="flex flex-col items-center">
                    <div class="relative group cursor-pointer">
                        <!-- Orbit Ring -->
                        <div class="absolute -inset-2 rounded-full border-2 border-dashed border-indigo-200 group-hover:border-indigo-400 group-hover:rotate-45 transition-all duration-700"></div>

                        <!-- Image Container -->
                        <div class="relative h-44 w-44 rounded-full p-1 bg-white shadow-lg border border-slate-100 overflow-hidden">
                            <img id="imagePreview"
                                 src="@imageSource"
                                 alt="Profile Preview"
                                 class="h-full w-full object-cover rounded-full bg-slate-50 transition-transform duration-500 group-hover:scale-110" />

                            <!-- Overlay -->
                            <div class="absolute inset-0 bg-indigo-900/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <i class="fa-solid fa-cloud-arrow-up text-white text-3xl animate-bounce"></i>
                            </div>
                        </div>

                        <!-- Status Badge -->
                        <div class="absolute bottom-2 right-2 h-10 w-10 bg-emerald-500 border-4 border-white rounded-full flex items-center justify-center shadow-lg">
                            <i class="fa-solid fa-check text-white text-xs"></i>
                        </div>
                    </div>

                    <div class="mt-8 w-full text-center">
                        <label for="file-upload" class="relative group inline-flex items-center px-8 py-3 bg-slate-900 text-white text-[11px] font-black uppercase tracking-widest rounded-xl hover:bg-indigo-600 transition-all cursor-pointer shadow-lg shadow-slate-200 hover:shadow-indigo-100">
                            <i class="fa-solid fa-images mr-2"></i>
                            <span>Browse Gallery</span>
                            <input id="file-upload"
                                   asp-for="ProfileImageFile"
                                   type="file"
                                   accept="image/jpeg,image/png,image/webp"
                                   class="sr-only"
                                   onchange="previewFile(event)" />
                        </label>

                        <div class="mt-4 flex flex-col gap-1">
                            <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest">Supports JPG, PNG, WebP</p>
                            <p class="text-[10px] text-indigo-500 font-black uppercase tracking-widest">Maximum File Size: 5MB</p>
                        </div>

                        <span asp-validation-for="ProfileImageFile" class="mt-3 block text-[11px] text-rose-500 font-black tracking-wide"></span>
                    </div>
                </div>

                <!-- Actions -->
                <div class="pt-6 border-t border-slate-50 flex flex-col sm:flex-row gap-3">
                    <button type="submit"
                            class="flex-[2] py-4 bg-indigo-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-indigo-700 shadow-lg shadow-indigo-100 transition-all hover:scale-[1.02] active:scale-[0.98]">
                        <i class="fa-solid fa-floppy-disk mr-2"></i>
                        Save Changes
                    </button>
                    <a asp-controller="Profile" asp-action="ProfileDetails"
                       class="flex-1 py-4 bg-slate-50 text-slate-600 text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-slate-100 text-center transition-colors border border-slate-100">
                        Cancel
                    </a>
                </div>
            </form>
        </div>

        <!-- Tip Footer -->
        <div class="mt-8 text-center">
            <p class="text-[10px] text-slate-400 font-black uppercase tracking-[0.2em] flex items-center justify-center gap-2">
                <i class="fa-solid fa-circle-info text-indigo-400"></i>
                Images are automatically optimized for performance
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/site.js" asp-append-version="true"></script>
}