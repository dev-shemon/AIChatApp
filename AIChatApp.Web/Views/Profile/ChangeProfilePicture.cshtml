@model AIChatApp.Application.DTOs.UpdateProfilePictureDto

@{
    ViewData["Title"] = "Change Profile Picture";
}

<div class="min-h-screen pt-12 flex justify-center bg-gray-50">
    <div class="w-full max-w-2xl px-4 sm:px-6 lg:px-8">

        <h1 class="text-3xl font-extrabold text-gray-900 mb-6 text-center">Update Profile Picture</h1>

        <div class="bg-white rounded-xl shadow-2xl p-8 sm:p-10">

            <form asp-controller="Profile" asp-action="ChangeProfilePicture" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="UserId" />

                <div asp-validation-summary="ModelOnly" class="text-red-500 font-medium mb-4 p-3 bg-red-50 rounded-lg border border-red-200"></div>

                <div class="mb-8">
                    <label asp-for="ProfileImageFile" class="block text-sm font-medium text-gray-700 mb-2">Select New Profile Image</label>

                    <input type="file" asp-for="ProfileImageFile" accept="image/jpeg,image/png"
                           class="w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none file:py-3 file:px-4 file:border-0 file:bg-indigo-600 file:text-white file:font-semibold file:mr-4 file:hover:bg-indigo-700" />

                    <p class="mt-2 text-sm text-gray-500">JPG or PNG (Max 5MB recommended)</p>
                    <span asp-validation-for="ProfileImageFile" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div class="flex flex-col sm:flex-row justify-between gap-4">

                    <a asp-controller="Profile" asp-action="ProfileDetails"
                       class="flex justify-center items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-100 transition duration-150 shadow-sm w-full sm:w-1/2">
                        Cancel
                    </a>

                    <button type="submit"
                            class="w-full sm:w-1/2 px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-4 focus:ring-indigo-300/50 transition duration-150 shadow-lg">
                        Upload Picture
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}