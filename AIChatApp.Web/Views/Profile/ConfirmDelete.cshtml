@model AIChatApp.Application.DTOs.DeleteAccountDto

@{
    ViewData["Title"] = "Delete Account";
}

<div class="min-h-[85vh] flex items-center justify-center py-20 px-4 sm:px-6 lg:px-8 bg-slate-50">
    <div class="w-full max-w-md">

        <!-- Warning Header -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-rose-50 rounded-[2rem] shadow-xl shadow-rose-100 mb-6 border border-rose-100">
                <i class="fa-solid fa-triangle-exclamation text-rose-600 text-3xl animate-pulse"></i>
            </div>
            <h2 class="text-3xl font-black tracking-tight text-slate-900">Account Termination</h2>
            <div class="mt-4 p-4 bg-white rounded-2xl border border-slate-100 shadow-sm">
                <p class="text-sm text-slate-500 font-medium leading-relaxed">
                    This action is <span class="text-rose-600 font-bold uppercase tracking-wider">irreversible</span>. All chat history, AI training data, and profile settings will be wiped from our servers.
                </p>
            </div>
        </div>

        <!-- Security Confirmation Form -->
        <div class="bg-white rounded-[2.5rem] p-8 md:p-10 border border-slate-100 shadow-2xl shadow-slate-200/50">
            <form asp-controller="Profile" asp-action="DeleteAccount" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="p-4 rounded-xl bg-rose-50 text-rose-600 text-[11px] font-black uppercase tracking-widest border border-rose-100 mb-6 text-center" role="alert"></div>

                <div>
                    <label asp-for="Password" class="block text-xs font-black text-slate-900 uppercase tracking-[0.2em] mb-3 ml-1">Confirm with Password</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-rose-600 transition-colors">
                            <i class="fa-solid fa-key text-sm"></i>
                        </div>
                        <input asp-for="Password" type="password"
                               class="block w-full pl-11 pr-4 py-4 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:bg-white transition-all font-bold text-slate-900"
                               placeholder="••••••••">
                    </div>
                    <span asp-validation-for="Password" class="mt-2 block text-[11px] text-rose-500 font-bold ml-1"></span>
                </div>

                <div class="pt-4 space-y-3">
                    <button type="submit"
                            class="w-full flex justify-center py-4 px-4 bg-rose-600 text-white text-[11px] font-black uppercase tracking-[0.2em] rounded-2xl hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500 transition-all shadow-lg shadow-rose-100 hover:scale-[1.01] active:scale-[0.98]">
                        Confirm Termination
                    </button>

                    <a asp-controller="Profile" asp-action="ProfileDetails"
                       class="w-full flex justify-center py-4 px-4 bg-white text-slate-500 text-[11px] font-black uppercase tracking-[0.2em] rounded-2xl border border-slate-100 hover:bg-slate-50 hover:text-slate-900 transition-all text-center">
                        Nevermind, Go Back
                    </a>
                </div>
            </form>
        </div>

        <!-- Security Badge -->
        <div class="mt-10 flex flex-col items-center">
            <div class="flex items-center gap-2 text-[10px] text-slate-400 font-black uppercase tracking-widest">
                <i class="fa-solid fa-shield-check text-indigo-400"></i>
                Secure Request Processing
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}