@model AIChatApp.Application.DTOs.ChangePasswordDto
@{
    ViewData["Title"] = "Change Password";
}

<div class="max-w-md mx-auto p-6 bg-white rounded-xl shadow-lg mt-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Change Password</h2>

    <form asp-action="ChangePassword" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

        <div class="mb-4">
            <label asp-for="CurrentPassword" class="block text-gray-700 text-sm font-semibold mb-2"></label>
            <input asp-for="CurrentPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="CurrentPassword" class="text-red-500 text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="NewPassword" class="block text-gray-700 text-sm font-semibold mb-2"></label>
            <input asp-for="NewPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="NewPassword" class="text-red-500 text-xs"></span>
        </div>

        <div class="mb-6">
            <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-semibold mb-2"></label>
            <input asp-for="ConfirmPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-150">
                Change Password
            </button>
            <a asp-action="ProfileDetails" class="inline-block align-baseline font-bold text-sm text-gray-500 hover:text-indigo-800">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}