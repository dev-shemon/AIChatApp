@model AIChatApp.Application.DTOs.ChangePasswordDto
@{
    ViewData["Title"] = "Change Password";
}

<div class="min-h-[80vh] flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-slate-50">
    <div class="w-full max-w-md">
        <!-- Header Section -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-600 rounded-[1.5rem] shadow-xl shadow-indigo-100 mb-6 transition-transform hover:scale-110 duration-500">
                <i class="fa-solid fa-key text-white text-2xl"></i>
            </div>
            <h2 class="text-3xl font-black tracking-tight text-slate-900">Change Password</h2>
            <p class="mt-3 text-sm text-slate-500 font-medium">Ensure your account is secure with a strong password.</p>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-[2.5rem] p-8 md:p-10 border border-slate-100 shadow-2xl shadow-slate-200/50">
            <form asp-controller="Profile" asp-action="ChangePassword" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <!-- Global Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="p-4 rounded-xl bg-rose-50 text-rose-600 text-xs font-bold border border-rose-100 text-center"></div>

                <div class="space-y-5">
                    <!-- Current Password -->
                    <div class="space-y-2">
                        <label asp-for="CurrentPassword" class="block text-xs font-black text-slate-900 uppercase tracking-widest ml-1">Current Password</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-indigo-600 transition-colors">
                                <i class="fa-solid fa-lock text-sm"></i>
                            </div>
                            <input asp-for="CurrentPassword" type="password"
                                   class="block w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                                   placeholder="Enter current password">
                        </div>
                        <span asp-validation-for="CurrentPassword" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                    </div>

                    <!-- New Password -->
                    <div class="space-y-2">
                        <label asp-for="NewPassword" class="block text-xs font-black text-slate-900 uppercase tracking-widest ml-1">New Password</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-indigo-600 transition-colors">
                                <i class="fa-solid fa-user-shield text-sm"></i>
                            </div>
                            <input asp-for="NewPassword" type="password"
                                   class="block w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                                   placeholder="New secure password">
                        </div>
                        <span asp-validation-for="NewPassword" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                    </div>

                    <!-- Confirm New Password -->
                    <div class="space-y-2">
                        <label asp-for="ConfirmPassword" class="block text-xs font-black text-slate-900 uppercase tracking-widest ml-1">Confirm New Password</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-indigo-600 transition-colors">
                                <i class="fa-solid fa-circle-check text-sm"></i>
                            </div>
                            <input asp-for="ConfirmPassword" type="password"
                                   class="block w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                                   placeholder="Repeat new password">
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="pt-4 flex items-center gap-4">
                    <button type="submit" class="flex-[2] py-4 bg-indigo-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-indigo-700 shadow-lg shadow-indigo-100 transition-all hover:scale-[1.02] active:scale-[0.98]">
                        Update Password
                    </button>
                    <a asp-action="ProfileDetails" class="flex-1 py-4 bg-slate-50 text-slate-600 text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-slate-100 text-center transition-colors border border-slate-100">
                        Cancel
                    </a>
                </div>
            </form>
        </div>

        <!-- Security Footer -->
        <div class="mt-8 text-center">
            <div class="inline-flex items-center gap-2 px-3 py-1 bg-slate-100 rounded-full border border-slate-200">
                <i class="fa-solid fa-lock-shield text-slate-400 text-[10px]"></i>
                <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Secure session management</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}