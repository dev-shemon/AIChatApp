@using AIChatApp.Application.Interfaces
@model UserListViewModel

@{
    ViewData["Title"] = "Discover";
    bool isSearchMode = ViewBag.IsSearchMode ?? false;
    string searchQuery = ViewBag.SearchQuery as string ?? "";
}

<!-- Main Container: Centered Vertically & Horizontally -->
<!-- min-h-screen ensures it takes full height to center vertically -->
<div class="min-h-screen flex flex-col justify-center py-20 bg-white">

    <!-- Inner Width Container (approx 45% width on large screens) -->
    <div class="w-full max-w-2xl mx-auto px-4 sm:px-6">

        <!-- Header & Search -->
        <div class="mb-12 text-center">
            <h1 class="text-4xl font-bold tracking-tight text-gray-900 mb-2">Discover People</h1>
            <p class="text-gray-500 mb-8">Find friends and start a conversation.</p>

            <!-- Search Bar -->
            <form method="get" asp-controller="UserList" asp-action="UsersList" class="relative max-w-lg mx-auto">
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                    <input type="text" name="search" value="@searchQuery"
                           placeholder="Search by name or username..."
                           class="block w-full pl-11 pr-4 py-4 bg-gray-50 border-none rounded-full text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-black/5 focus:bg-white shadow-sm transition-all duration-200" />

                    @if (isSearchMode)
                    {
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                            <a asp-controller="UserList" asp-action="UsersList" class="p-2 rounded-full hover:bg-gray-200 text-gray-400 hover:text-gray-600 transition-colors">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </a>
                        </div>
                    }
                </div>
            </form>
        </div>

        <!-- Content Area -->
        <div class="space-y-12">

            @if (isSearchMode)
            {
                <!-- Search Results -->
                <div>
                    <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-widest mb-6 px-1">Search Results</h3>
                    <div class="space-y-4">
                        @if (Model.RecentUsers.Any())
                        {
                            foreach (var user in Model.RecentUsers)
                            {
                                <partial name="_UserCard" model="user" />
                            }
                        }
                        else
                        {
                            <div class="text-center py-12 bg-gray-50 rounded-2xl border border-dashed border-gray-200">
                                <p class="text-gray-500">No users found matching "<span class="font-medium text-gray-900">@searchQuery</span>"</p>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- Section 1: New Members -->
                @if (Model.RecentUsers.Any())
                {
                    <div>
                        <div class="flex items-center justify-between mb-6 px-1">
                            <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-widest">Newly Added</h3>
                            <span class="text-xs text-green-600 font-medium bg-green-50 px-2 py-1 rounded-full">Last 5 Days</span>
                        </div>

                        <div class="space-y-4">
                            @foreach (var user in Model.RecentUsers)
                            {
                                <partial name="_UserCard" model="user" />
                            }
                        </div>
                    </div>
                }

                <!-- Section 2: Suggestions -->
                @if (Model.RandomUsers.Any())
                {
                    <div>
                        <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-widest mb-6 px-1">Suggested for you</h3>
                        <div class="space-y-4">
                            @foreach (var user in Model.RandomUsers)
                            {
                                <partial name="_UserCard" model="user" />
                            }
                        </div>
                    </div>
                }

                @if (!Model.RecentUsers.Any() && !Model.RandomUsers.Any())
                {
                    <div class="text-center py-12">
                        <p class="text-gray-400">No users to display right now.</p>
                    </div>
                }
            }
        </div>
    </div>
</div>