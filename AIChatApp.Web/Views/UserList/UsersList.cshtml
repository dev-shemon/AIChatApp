@using AIChatApp.Application.Interfaces
@model UserListViewModel

@{
    ViewData["Title"] = "Discover Users";
    bool isSearchMode = ViewBag.IsSearchMode ?? false;
    string searchQuery = ViewBag.SearchQuery as string ?? "";
}

<div class="container mx-auto px-4 py-8 max-w-6xl">

    @* --- Top Search Bar --- *@
    <div class="bg-white rounded-xl shadow-sm p-6 mb-8 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Find Users</h2>
        <form method="get" asp-controller="UserList" asp-action="UsersList" class="relative flex items-center">
            <input type="text" name="search" value="@searchQuery"
                   placeholder="Search by Name (partial) or Username (exact)..."
                   class="w-full pl-4 pr-32 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition" />

            <button type="submit" class="absolute right-2 top-2 bottom-2 px-6 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-md transition duration-150">
                Search
            </button>
        </form>

        @if (isSearchMode)
        {
            <div class="mt-4 flex items-center justify-between">
                <p class="text-gray-600">Showing results for: <span class="font-bold text-indigo-600">"@searchQuery"</span></p>
                <a asp-controller="UserList" asp-action="UsersList" class="text-sm text-red-500 hover:text-red-700 underline font-medium">Clear Search</a>
            </div>
        }
    </div>

    @if (isSearchMode)
    {
        @* --- Search Results --- *@
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @if (Model.RecentUsers.Any())
            {
                foreach (var user in Model.RecentUsers)
                {
                    <partial name="_UserCard" model="user" />
                }
            }
            else
            {
                <div class="col-span-full text-center py-10">
                    <p class="text-gray-500 text-lg">No users found.</p>
                </div>
            }
        </div>
    }
    else
    {
        @* --- Section 1: Recently Registered (4-5 Days) --- *@
        <div class="mb-12">
            <div class="flex items-center mb-6">
                <div class="bg-green-100 p-2 rounded-lg mr-3">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800">New Members (Last 5 Days)</h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @if (Model.RecentUsers.Any())
                {
                    foreach (var user in Model.RecentUsers)
                    {
                        <partial name="_UserCard" model="user" />
                    }
                }
                else
                {
                    <p class="text-gray-500 italic ml-2">No new users registered recently.</p>
                }
            </div>
        </div>

        @* --- Section 2: Random Users --- *@
        <div>
            <div class="flex items-center mb-6">
                <div class="bg-indigo-100 p-2 rounded-lg mr-3">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800">Suggested For You</h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @if (Model.RandomUsers.Any())
                {
                    foreach (var user in Model.RandomUsers)
                    {
                        <partial name="_UserCard" model="user" />
                    }
                }
                else
                {
                    <p class="text-gray-500 italic ml-2">No suggestions available.</p>
                }
            </div>
        </div>
    }
</div>