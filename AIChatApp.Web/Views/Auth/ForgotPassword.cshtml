@model AIChatApp.Application.DTOs.ForgotPasswordDto

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<div class="flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-sm space-y-8">
        <div class="text-center">
            <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Reset password</h2>
            <p class="mt-2 text-sm text-gray-600">
                Enter your email address and we'll send you a link to reset your password.
            </p>
        </div>

        <form asp-controller="Auth" asp-action="ForgotPassword" method="post" class="mt-8 space-y-6">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-medium text-center"></div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <div class="mt-1">
                    <input asp-for="Email" type="email" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors" placeholder="you@example.com">
                    <span asp-validation-for="Email" class="mt-1 text-xs text-red-500"></span>
                </div>
            </div>

            <div>
                <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-black py-3 px-4 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200">
                    Send Reset Link
                </button>
            </div>
        </form>

        <div class="mt-6 border-t border-gray-100 pt-6">
            <p class="text-center text-sm text-gray-500">
                Remember your password?
                <a asp-controller="Auth" asp-action="Login" class="font-semibold text-black hover:underline transition-all">Sign in here</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}