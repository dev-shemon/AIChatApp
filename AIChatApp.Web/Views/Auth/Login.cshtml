@model AIChatApp.Application.DTOs.LoginDto

@{
    ViewData["Title"] = "Sign In";
    Layout = "_Layout";
}

<div class="flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-sm space-y-8">
        <div class="text-center">
            <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Welcome back</h2>
            <p class="mt-2 text-sm text-gray-600">
                Sign in to continue to your dashboard.
            </p>
        </div>

        <form asp-controller="Auth" asp-action="Login" method="post" class="mt-8 space-y-6">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-medium text-center"></div>

            <div class="space-y-4">
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
                    <div class="mt-1">
                        <input asp-for="Email" type="email" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors" placeholder="name@company.com">
                        <span asp-validation-for="Email" class="mt-1 text-xs text-red-500"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <div class="mt-1">
                        <input asp-for="Password" type="password" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors">
                        <span asp-validation-for="Password" class="mt-1 text-xs text-red-500"></span>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end">
                <div class="text-sm">
                    <a asp-controller="Auth" asp-action="ForgotPassword" class="font-medium text-gray-500 hover:text-black hover:underline transition-all">
                        Forgot your password?
                    </a>
                </div>
            </div>

            <div>
                <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-black py-3 px-4 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200">
                    Sign In
                </button>
            </div>
        </form>

        <p class="mt-2 text-center text-sm text-gray-500">
            Don't have an account?
            <a asp-controller="Auth" asp-action="Register" class="font-semibold text-black hover:underline transition-all">Create one here</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}