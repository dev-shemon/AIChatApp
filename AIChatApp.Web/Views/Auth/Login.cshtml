@model AIChatApp.Application.DTOs.LoginDto

@{
    ViewData["Title"] = "Sign In";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 p-4 sm:p-6 lg:p-8">
    <div class="bg-white p-8 rounded-lg shadow-xl w-full max-w-md">
        <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-6">Welcome Back</h2>
        <p class="text-center text-gray-600 mb-8">Sign in to access your AI chats.</p>

        <form asp-controller="Auth" asp-action="Login" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm font-medium mb-4"></div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                <input asp-for="Email" type="email" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm placeholder-gray-400" placeholder="you@example.com">
                <span asp-validation-for="Email" class="mt-2 text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="Password" type="password" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                <span asp-validation-for="Password" class="mt-2 text-sm text-red-600"></span>
            </div>

            <div class="flex items-center justify-end">
                <a href="#" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">Forgot your password?</a>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    Sign In
                </button>
            </div>
        </form>

        <p class="mt-8 text-center text-sm text-gray-600">
            Don't have an account? <a asp-controller="Auth" asp-action="Register" class="font-medium text-indigo-600 hover:text-indigo-500">Register here</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}