@{
    ViewData["Title"] = "Email Verified";
    Layout = "_Layout";
}

<div class="flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-white min-h-[80vh]">
    <div class="w-full max-w-sm text-center space-y-6">

        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-50">
            <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
        </div>

        <div>
            <h2 class="text-3xl font-bold tracking-tight text-gray-900">Email Verified!</h2>
            <p class="mt-2 text-sm text-gray-500">
                Your email address has been successfully confirmed. You can now log in to your account.
            </p>
        </div>

        <div class="pt-4">
            <a asp-controller="Auth" asp-action="Login" class="flex w-full justify-center rounded-md border border-transparent bg-black py-3 px-4 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200">
                Go to Login
            </a>
        </div>
    </div>
</div>