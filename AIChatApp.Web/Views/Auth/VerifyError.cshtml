@{
    ViewData["Title"] = "Verification Failed";
    Layout = "_Layout";
}

<div class="flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-white min-h-[80vh]">
    <div class="w-full max-w-md text-center space-y-6">

        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-50">
            <svg class="h-8 w-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </div>

        <div>
            <h2 class="text-3xl font-bold tracking-tight text-gray-900">Verification Failed</h2>
            <p class="mt-4 text-base text-gray-600">
                The verification link is invalid, expired, or has already been used.
            </p>
            <p class="mt-2 text-sm text-gray-500">
                Please try registering again or contact support if the issue persists.
            </p>
        </div>

        <div class="pt-6 flex flex-col sm:flex-row gap-4 justify-center">
            <a asp-controller="Auth" asp-action="Register" class="inline-flex justify-center rounded-md border border-transparent bg-black py-3 px-6 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200">
                Register Again
            </a>
            <a asp-controller="Home" asp-action="Index" class="inline-flex justify-center rounded-md border border-gray-300 bg-white py-3 px-6 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200">
                Go to Home
            </a>
        </div>
    </div>
</div>