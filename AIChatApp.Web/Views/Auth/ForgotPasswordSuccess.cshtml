@{
    ViewData["Title"] = "Check Your Email";
    Layout = "_Layout";
}

<div class="flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md text-center">
        <!-- Minimalist Icon Container -->
        <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-gray-50 mb-6">
            <svg class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
        </div>

        <h2 class="text-3xl font-bold tracking-tight text-gray-900 mb-4">Check your email</h2>

        <div class="space-y-4 text-gray-500 text-sm leading-relaxed">
            <p>
                We've sent a password reset link to your email address. Please check your inbox and click the link to reset your password.
            </p>
            <p class="font-medium text-gray-900">
                The link will expire in 1 hour.
            </p>
        </div>

        <div class="mt-8 space-y-4">
            <a href="@Url.Action("Login", "Auth")" class="inline-flex w-full justify-center rounded-md border border-transparent bg-black py-3 px-4 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200">
                Back to Login
            </a>

            <p class="text-sm text-gray-500">
                Didn't receive the email?
                <a href="@Url.Action("ForgotPassword", "Auth")" class="font-semibold text-black hover:underline transition-all">Click to resend</a>
            </p>
        </div>
    </div>
</div>