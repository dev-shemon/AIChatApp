@{
    ViewData["Title"] = "Password Reset Email Sent";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 p-4 sm:p-6 lg:p-8">
    <div class="bg-white p-8 rounded-lg shadow-xl w-full max-w-md text-center">
        <div class="mb-6">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
                <svg class="h-6 w-6 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
            </div>
        </div>

        <h2 class="text-3xl font-extrabold text-gray-900 mb-4">Check Your Email</h2>
        <p class="text-gray-600 mb-6">We've sent a password reset link to your email address. Please check your inbox and click the link to reset your password.</p>
        <p class="text-sm text-gray-500 mb-8">The link will expire in 1 hour for security reasons.</p>

        <a href="@Url.Action("Login", "Auth")" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded-md transition duration-150 ease-in-out">
            Back to Login
        </a>

        <p class="mt-8 text-sm text-gray-600">
            Didn't receive the email? <a href="@Url.Action("ForgotPassword", "Auth")" class="font-medium text-indigo-600 hover:text-indigo-500">Try again</a>
        </p>
    </div>
</div>