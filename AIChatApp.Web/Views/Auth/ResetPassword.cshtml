@model AIChatApp.Application.DTOs.ResetPasswordDto

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<div class="flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-white min-h-[80vh]">
    <div class="w-full max-w-sm space-y-8">
        <div class="text-center">
            <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Reset password</h2>
            <p class="mt-2 text-sm text-gray-600">
                Please enter your new password below.
            </p>
        </div>

        <form asp-controller="Auth" asp-action="ResetPassword" method="post" class="mt-8 space-y-6">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-medium text-center"></div>

            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div class="space-y-5">
                <div>
                    <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700">New Password</label>
                    <div class="mt-1">
                        <input asp-for="NewPassword" type="password" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors placeholder-gray-400" placeholder="Minimum 6 characters">
                        <span asp-validation-for="NewPassword" class="mt-1 text-xs text-red-500"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <div class="mt-1">
                        <input asp-for="ConfirmPassword" type="password" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors placeholder-gray-400" placeholder="Re-enter password">
                        <span asp-validation-for="ConfirmPassword" class="mt-1 text-xs text-red-500"></span>
                    </div>
                </div>
            </div>

            <div>
                <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-black py-3 px-4 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200">
                    Reset Password
                </button>
            </div>
        </form>

        <div class="mt-6 border-t border-gray-100 pt-6">
            <p class="text-center text-sm text-gray-500">
                Remember your password?
                <a asp-controller="Auth" asp-action="Login" class="font-semibold text-black hover:underline transition-all">Sign in here</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}