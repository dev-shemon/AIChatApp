@model AIChatApp.Application.DTOs.ResetPasswordDto

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 p-4 sm:p-6 lg:p-8">
    <div class="bg-white p-8 rounded-lg shadow-xl w-full max-w-md">
        <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-6">Reset Your Password</h2>
        <p class="text-center text-gray-600 mb-8">Enter your new password below.</p>

        <form asp-controller="Auth" asp-action="ResetPassword" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm font-medium mb-4"></div>

            <!-- Hidden fields for token and email -->
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div>
                <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                <input asp-for="NewPassword" type="password" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm placeholder-gray-400" placeholder="Enter at least 6 characters">
                <span asp-validation-for="NewPassword" class="mt-2 text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm placeholder-gray-400" placeholder="Re-enter your password">
                <span asp-validation-for="ConfirmPassword" class="mt-2 text-sm text-red-600"></span>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    Reset Password
                </button>
            </div>
        </form>

        <div class="mt-6 border-t border-gray-300 pt-6">
            <p class="text-center text-sm text-gray-600">
                Remember your password? <a asp-controller="Auth" asp-action="Login" class="font-medium text-indigo-600 hover:text-indigo-500">Sign in here</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}