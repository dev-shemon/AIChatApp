@{
    ViewData["Title"] = "Registration Successful";
    Layout = "_Layout";
}

<div class="flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md text-center">
        <!-- Minimalist Success Icon -->
        <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-gray-50 mb-6">
            <svg class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>

        <h2 class="text-3xl font-bold tracking-tight text-gray-900 mb-4">Welcome aboard!</h2>

        <p class="text-lg text-gray-900 font-medium mb-2">
            Your registration was successful.
        </p>

        <p class="text-gray-500 leading-relaxed mb-8">
            We've sent a verification email to your inbox. Please verify your account to access all features. Don't forget to check your spam folder just in case.
        </p>

        <a href="/Auth/Login" class="inline-flex w-full justify-center rounded-md border border-transparent bg-black py-3 px-4 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200">
            Go to Login
        </a>
    </div>
</div>