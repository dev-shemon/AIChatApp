@model AIChatApp.Application.DTOs.RegisterDto

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-sm space-y-8">
        <div class="text-center">
            <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Create an account</h2>
            <p class="mt-2 text-sm text-gray-600">
                Join AIChatApp today.
            </p>
        </div>

        <form asp-controller="Auth" asp-action="Register" method="post" class="mt-8 space-y-6">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-medium text-center"></div>

            <div class="space-y-4">
                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700">Full Name</label>
                    <input asp-for="FullName" type="text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors" placeholder="John Doe">
                    <span asp-validation-for="FullName" class="mt-1 text-xs text-red-500"></span>
                </div>

                <div>
                    <label asp-for="UserName" class="block text-sm font-medium text-gray-700">Username</label>
                    <input asp-for="UserName" type="text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors" placeholder="johndoe">
                    <span asp-validation-for="UserName" class="mt-1 text-xs text-red-500"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
                    <input asp-for="Email" type="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors" placeholder="you@example.com">
                    <span asp-validation-for="Email" class="mt-1 text-xs text-red-500"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Password" type="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors" placeholder="••••••••">
                    <span asp-validation-for="Password" class="mt-1 text-xs text-red-500"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm px-4 py-3 bg-gray-50 focus:bg-white transition-colors" placeholder="••••••••">
                    <span asp-validation-for="ConfirmPassword" class="mt-1 text-xs text-red-500"></span>
                </div>
            </div>

            <div>
                <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-black py-3 px-4 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200">
                    Register
                </button>
            </div>
        </form>

        <p class="mt-2 text-center text-sm text-gray-500">
            Already have an account?
            <a href="/Auth/Login" class="font-semibold text-black hover:underline transition-all">Sign in here</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}