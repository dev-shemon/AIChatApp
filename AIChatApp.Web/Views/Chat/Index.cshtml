@model AIChatApp.Application.DTOs.ChatDto
@{
    Layout = "_ChatLayout";
    ViewData["Title"] = $"Chat with {Model.ChatUserFullName ?? Model.ChatUserName}";

    // Generate avatar initials
    string initials = "";
    var displayName = Model.ChatUserFullName ?? Model.ChatUserName ?? "User";
    if (!string.IsNullOrEmpty(displayName))
    {
        var nameParts = displayName.Trim().Split(' ');
        if (nameParts.Length >= 2)
        {
            initials = $"{nameParts[0][0]}{nameParts[nameParts.Length - 1][0]}".ToUpper();
        }
        else if (nameParts.Length == 1)
        {
            initials = nameParts[0][0].ToString().ToUpper();
        }
    }

    // Generate avatar URL or use uploaded picture
    string avatarUrl = $"https://ui-avatars.com/api/?name={Uri.EscapeDataString(initials)}&background=random&color=fff&size=128&bold=true&font-size=0.33";
    string profileImageSource = !string.IsNullOrEmpty(Model.ChatUserProfileImage) ? Model.ChatUserProfileImage : avatarUrl;
}

<div class="fixed inset-0 flex flex-col bg-gray-50">

    <!-- Chat Header - FIXED AT TOP -->
    <div class="flex items-center justify-between px-6 py-4 bg-white border-b border-gray-200 shadow-sm z-10">
        <div class="flex items-center gap-4">
            <!-- Back Button -->
            <a asp-controller="User" asp-action="Index"
               class="flex items-center justify-center w-10 h-10 rounded-full hover:bg-gray-100 transition-colors">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </a>

            <!-- Profile Section -->
            <div class="flex items-center gap-3">
                <div class="relative">
                    <img src="@profileImageSource"
                         alt="@displayName"
                         class="w-12 h-12 rounded-full object-cover ring-2 ring-gray-100"
                         onerror="this.onerror=null;this.src='@avatarUrl';" />
                    <span id="userStatus"
                          class="absolute bottom-0 right-0 w-3.5 h-3.5 bg-gray-400 border-2 border-white rounded-full"></span>
                </div>

                <div class="flex flex-col">
                    <h2 class="text-base font-bold text-gray-900 leading-tight">@displayName</h2>
                    <div class="flex items-center gap-1.5">
                        <span class="text-xs text-gray-500">@@@Model.ChatUserName</span>
                        <span id="typingIndicator" class="hidden text-xs text-blue-600 font-medium animate-pulse">• typing...</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-2">
            <button class="p-2 rounded-full hover:bg-gray-100 transition-colors" title="More options">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                </svg>
            </button>
        </div>
    </div>

    <!-- Messages Container - SCROLLABLE MIDDLE SECTION -->
    <div id="chatMessages" class="flex-1 overflow-y-auto px-6 py-4 space-y-4 scroll-smooth">
        @if (Model.Messages != null && Model.Messages.Any())
        {
            @foreach (var message in Model.Messages)
            {
                if (message.IsSentByCurrentUser)
                {
                    <!-- Sent Message (Right) -->
                    <div class="flex justify-end animate-fadeIn" data-message-id="@message.Id">
                        <div class="max-w-[70%] group relative">
                            <div class="bg-gradient-to-br from-blue-600 to-blue-700 text-white rounded-2xl rounded-tr-sm px-4 py-2.5 shadow-md hover:shadow-lg transition-shadow">

                                <!-- Attachment Display (Sender) -->
                                @if (!string.IsNullOrEmpty(message.AttachmentUrl))
                                {
                                    <div class="mb-2">
                                        @if (message.AttachmentType == "image")
                                        {
                                            <a href="@message.AttachmentUrl" target="_blank">
                                                <!-- UPDATED IMAGE SIZING HERE -->
                                                <img src="@message.AttachmentUrl" alt="Image" class="rounded-lg max-w-xs max-h-80 w-auto h-auto object-cover border border-white/20 hover:opacity-90 transition-opacity" />
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@message.AttachmentUrl" target="_blank" class="flex items-center gap-3 p-2 rounded-lg bg-black/20 hover:bg-black/30 transition-colors border border-white/10">
                                                <div class="bg-white p-1.5 rounded text-blue-600">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                                </div>
                                                <div class="flex flex-col overflow-hidden">
                                                    <span class="text-xs font-semibold truncate text-white" title="@message.OriginalFileName">@(message.OriginalFileName ?? "File")</span>
                                                    <span class="text-[10px] text-blue-100 opacity-75 uppercase">Attachment</span>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                }

                                <!-- Message Text -->
                                @if (!string.IsNullOrEmpty(message.MessageContent))
                                {
                                    <p class="text-sm leading-relaxed break-words message-text">@message.MessageContent</p>
                                }
                            </div>

                            <!-- Options button -->
                            <button type="button"
                                    class="message-options-btn absolute -top-2 -right-2 w-8 h-8 rounded-full bg-white/90 text-gray-600 flex items-center justify-center shadow-sm opacity-0 group-hover:opacity-100 transition-opacity"
                                    data-message-id="@message.Id"
                                    aria-haspopup="true"
                                    aria-expanded="false">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v.01M12 12v.01M12 18v.01" />
                                </svg>
                            </button>

                            <!-- Actions menu -->
                            <div class="message-actions hidden absolute top-full right-0 mt-2 w-36 bg-white rounded-lg shadow-lg border border-gray-100 z-20">
                                @if (string.IsNullOrEmpty(message.AttachmentUrl))
                                {
                                    <button type="button" class="w-full text-left px-3 py-2 hover:bg-gray-50 text-sm edit-message-btn" data-message-id="@message.Id">Edit</button>
                                }
                                <button type="button" class="w-full text-left px-3 py-2 hover:bg-gray-50 text-sm text-red-600 delete-message-btn" data-message-id="@message.Id">Delete</button>
                            </div>

                            <div class="flex items-center justify-end gap-1.5 mt-1 px-2">
                                <span class="text-xs text-gray-500">@message.SentAt.ToLocalTime().ToString("h:mm tt")</span>
                                <span class="message-status" data-status="@(message.IsRead ? "seen" : "sent")">
                                    @if (message.IsRead)
                                    {
                                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 13l4 4L23 7" /></svg>
                                    }
                                    else
                                    {
                                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" /></svg>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Received Message (Left) -->
                    <div class="flex justify-start animate-fadeIn" data-message-id="@message.Id">
                        <div class="max-w-[70%] group">
                            <div class="bg-white border border-gray-200 rounded-2xl rounded-tl-sm px-4 py-2.5 shadow-sm hover:shadow-md transition-shadow">

                                <!-- Attachment Display (Receiver) -->
                                @if (!string.IsNullOrEmpty(message.AttachmentUrl))
                                {
                                    <div class="mb-2">
                                        @if (message.AttachmentType == "image")
                                        {
                                            <a href="@message.AttachmentUrl" target="_blank">
                                                <!-- UPDATED IMAGE SIZING HERE -->
                                                <img src="@message.AttachmentUrl" alt="Image" class="rounded-lg max-w-xs max-h-80 w-auto h-auto object-cover border border-gray-200 hover:opacity-90 transition-opacity" />
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@message.AttachmentUrl" target="_blank" class="flex items-center gap-3 p-2 rounded-lg bg-gray-100 hover:bg-gray-200 transition-colors border border-gray-200">
                                                <div class="bg-white p-1.5 rounded text-gray-600 shadow-sm">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                                </div>
                                                <div class="flex flex-col overflow-hidden">
                                                    <span class="text-xs font-semibold truncate text-gray-800" title="@message.OriginalFileName">@(message.OriginalFileName ?? "File")</span>
                                                    <span class="text-[10px] text-gray-500 uppercase">Attachment</span>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                }

                                <!-- Message Text -->
                                @if (!string.IsNullOrEmpty(message.MessageContent))
                                {
                                    <p class="text-sm text-gray-800 leading-relaxed break-words message-text">@message.MessageContent</p>
                                }
                            </div>
                            <div class="flex items-center gap-1.5 mt-1 px-2">
                                <span class="text-xs text-gray-500">@message.SentAt.ToLocalTime().ToString("h:mm tt")</span>
                            </div>
                        </div>
                    </div>
                }
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="flex items-center justify-center h-full">
                <div class="text-center">
                    <div class="w-24 h-24 mx-auto mb-6 bg-gradient-to-br from-blue-100 to-blue-200 rounded-full flex items-center justify-center">
                        <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                        </svg>
                    </div>
                    <p class="text-gray-700 font-semibold text-lg">No messages yet</p>
                    <p class="text-gray-500 text-sm mt-2">Send a message to start the conversation with @displayName</p>
                </div>
            </div>
        }
    </div>

    <!-- Input Container - FIXED AT BOTTOM -->
    <div class="relative z-10">

        <!-- Attachment Preview Area (Initially Hidden) -->
        <div id="attachmentPreview" class="hidden absolute bottom-full left-0 right-0 bg-white border-t border-gray-200 p-3 px-6 shadow-md transition-all">
            <div class="flex items-start gap-4">
                <div class="relative group">
                    <!-- Image Preview -->
                    <img id="previewImage" src="" class="hidden h-20 w-auto object-cover rounded-lg border border-gray-200 shadow-sm" />

                    <!-- File Icon Preview -->
                    <div id="previewFileIcon" class="hidden h-20 w-20 flex flex-col items-center justify-center bg-gray-100 rounded-lg border border-gray-200 text-gray-500">
                        <svg class="w-8 h-8 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
                        <span class="text-[10px] uppercase font-bold">File</span>
                    </div>

                    <!-- Remove Button -->
                    <button id="removeAttachmentBtn" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full p-1 shadow hover:bg-red-600 transition-colors">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                    </button>
                </div>
                <div class="flex flex-col justify-center py-2">
                    <span class="text-xs font-semibold text-blue-600 uppercase tracking-wide mb-1">Attached</span>
                    <span id="previewFileName" class="text-sm text-gray-700 font-medium truncate max-w-[200px]">filename.jpg</span>
                </div>
            </div>
        </div>

        <!-- Main Input Bar -->
        <div class="px-6 py-4 bg-white border-t border-gray-200 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)]">
            <div class="flex items-end gap-3 max-w-5xl mx-auto">

                <!-- Hidden File Input -->
                <input type="file" id="fileInput" class="hidden" accept="image/*,.pdf,.doc,.docx,.txt" />

                <!-- Attachment Button -->
                <button id="attachButton" class="flex-shrink-0 p-3 rounded-full hover:bg-gray-100 transition-colors text-gray-500 hover:text-blue-600 active:bg-gray-200" title="Attach file">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                    </svg>
                </button>

                <!-- Message Input -->
                <div class="flex-1 relative">
                    <textarea id="messageInput"
                              rows="1"
                              class="w-full px-4 py-3 pr-12 bg-gray-50 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none text-sm placeholder-gray-400 transition-all"
                              placeholder="Type a message..."
                              style="max-height: 120px; min-height: 48px;"
                              autocomplete="off"></textarea>

                    <!-- Emoji Button -->
                    <button class="absolute right-3 bottom-3 p-1.5 rounded-full hover:bg-gray-200 transition-colors" title="Add emoji">
                        <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </button>
                </div>

                <!-- Send Button -->
                <button id="sendButton"
                        class="flex-shrink-0 flex items-center justify-center w-12 h-12 bg-gradient-to-br from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white rounded-full shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105 active:scale-95 disabled:opacity-50 disabled:cursor-not-allowed">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="currentUserId" value="@Model.CurrentUserId" />
<input type="hidden" id="chatUserId" value="@Model.ChatUserId" />
<input type="hidden" id="chatUserFullName" value="@displayName" />

<!-- Edit Message Modal -->
<div id="editMessageModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-gray-900 bg-opacity-50 transition-opacity backdrop-blur-sm"></div>
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg border border-gray-200">
                <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start w-full">
                        <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left w-full">
                            <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title">Edit Message</h3>
                            <div class="mt-4 w-full">
                                <input type="hidden" id="editMessageId" />
                                <textarea id="editMessageInput"
                                          class="w-full h-32 p-3 text-gray-700 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none resize-none bg-gray-50"
                                          placeholder="Edit your message..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                    <button type="button" id="saveEditBtn" class="inline-flex w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 sm:ml-3 sm:w-auto transition-colors">
                        Save Changes
                    </button>
                    <button type="button" id="cancelEditBtn" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto transition-colors">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
}

@section Styles {
    <style>
        /* Animation keyframes */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fadeIn {
            animation: fadeIn 0.3s ease-out;
        }

        /* Custom Scrollbar */
        #chatMessages::-webkit-scrollbar {
            width: 6px;
        }

        #chatMessages::-webkit-scrollbar-track {
            background: transparent;
        }

        #chatMessages::-webkit-scrollbar-thumb {
            background: #cbd5e0;
            border-radius: 3px;
        }

            #chatMessages::-webkit-scrollbar-thumb:hover {
                background: #a0aec0;
            }

        /* Edit Mode Styles */
        .message-editing textarea {
            min-height: 56px;
            max-height: 120px;
        }
    </style>
}