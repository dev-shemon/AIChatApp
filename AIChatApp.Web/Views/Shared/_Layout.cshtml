@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using System.Text.Json
@{
    // 1. Read TempData without consuming it yet
    var successMessage = TempData.Peek("SuccessMessage") as string;
    var warningMessage = TempData.Peek("WarningMessage") as string;
}
<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AIChatApp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    @RenderSection("HeadMeta", required: false)
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-white text-gray-900 flex flex-col h-full antialiased">

    <nav class="w-full bg-white border-b border-gray-100 fixed top-0 left-0 z-50 transition-all duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <div class="flex-shrink-0 flex items-center gap-2">
                    <a asp-controller="Home" asp-action="Index" class="group flex items-center gap-2">
                        <svg class="h-8 w-8 text-black group-hover:scale-110 transition-transform duration-300" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 6C13.66 6 15 7.34 15 9C15 10.66 13.66 12 12 12C10.34 12 9 10.66 9 9C9 7.34 10.34 6 12 6ZM12 18C9.33 18 7 16.66 6 14.7C6.03 12.71 10 11.61 12 11.61C14 11.61 17.97 12.71 18 14.7C17 16.66 14.67 18 12 18Z" />
                        </svg>
                        <span class="text-xl font-bold tracking-tight text-black">AIChatApp</span>
                    </a>
                </div>

                <div class="hidden md:flex items-center space-x-8">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <a asp-controller="Home" asp-action="Index" class="text-sm font-bold text-gray-500 hover:text-black hover:underline underline-offset-8 decoration-2 transition-all duration-200">Home</a>
                        <a href="/Chats" class="text-sm font-bold text-gray-500 hover:text-black hover:underline underline-offset-8 decoration-2 transition-all duration-200">Chats</a>
                        <a asp-controller="UserList" asp-action="UsersList" class="text-sm font-bold text-gray-500 hover:text-black hover:underline underline-offset-8 decoration-2 transition-all duration-200">Find Users</a>
                        <a asp-controller="Home" asp-action="Privacy" class="text-sm font-bold text-gray-500 hover:text-black hover:underline underline-offset-8 decoration-2 transition-all duration-200">Privacy</a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Index" class="text-sm font-bold text-gray-500 hover:text-black hover:underline underline-offset-8 decoration-2 transition-all duration-200">Home</a>
                        <a asp-controller="Home" asp-action="Privacy" class="text-sm font-bold text-gray-500 hover:text-black hover:underline underline-offset-8 decoration-2 transition-all duration-200">Privacy</a>
                    }
                </div>

                <div class="flex items-center space-x-6">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="flex items-center gap-4">
                            <a asp-controller="Profile" asp-action="ProfileDetails" class="group relative p-1" title="My Profile">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7 text-gray-500 group-hover:text-black transition-colors duration-200">
                                    <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
                                </svg>
                            </a>

                            <div class="h-6 w-px bg-gray-200"></div>

                            <form asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm" class="flex items-center">
                                @Html.AntiForgeryToken()
                                <button type="button" onclick="confirmLogout(event)" class="group p-1" title="Log out">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7 text-red-500 group-hover:text-red-700 transition-colors duration-200">
                                        <path fill-rule="evenodd" d="M7.5 3.75A1.5 1.5 0 006 5.25v13.5a1.5 1.5 0 001.5 1.5h6a1.5 1.5 0 001.5-1.5V15a.75.75 0 011.5 0v3.75a3 3 0 01-3 3h-6a3 3 0 01-3-3V5.25a3 3 0 013-3h6a3 3 0 013 3V9A.75.75 0 0115 9V5.25a1.5 1.5 0 00-1.5-1.5h-6zm10.72 4.72a.75.75 0 011.06 0l3 3a.75.75 0 010 1.06l-3 3a.75.75 0 11-1.06-1.06l1.72-1.72H9a.75.75 0 010-1.5h10.94l-1.72-1.72a.75.75 0 010-1.06z" clip-rule="evenodd" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="flex items-center gap-4">
                            <a asp-controller="Auth" asp-action="Login" class="text-sm font-bold text-gray-500 hover:text-black transition-colors">Log in</a>
                            <a asp-controller="Auth" asp-action="Register" class="text-sm font-bold bg-black text-white px-5 py-2.5 rounded-md hover:bg-gray-800 transition-colors shadow-sm">Sign Up</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="pt-24 flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-100 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div class="col-span-1 md:col-span-1">
                    <div class="flex items-center gap-2 mb-4">
                        <svg class="h-6 w-6 text-black" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 6C13.66 6 15 7.34 15 9C15 10.66 13.66 12 12 12C10.34 12 9 10.66 9 9C9 7.34 10.34 6 12 6ZM12 18C9.33 18 7 16.66 6 14.7C6.03 12.71 10 11.61 12 11.61C14 11.61 17.97 12.71 18 14.7C17 16.66 14.67 18 12 18Z" />
                        </svg>
                        <span class="text-lg font-bold text-gray-900">AIChatApp</span>
                    </div>
                    <p class="text-gray-500 text-sm leading-relaxed">
                        Connecting people through intelligent conversation. Experience the future of messaging.
                    </p>
                </div>

                <div>
                    <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase mb-4">Product</h3>
                    <ul class="space-y-3">
                        <li><a href="#" class="text-gray-500 hover:text-black text-sm transition-colors">Features</a></li>
                        <li><a href="#" class="text-gray-500 hover:text-black text-sm transition-colors">Pricing</a></li>
                        <li><a href="#" class="text-gray-500 hover:text-black text-sm transition-colors">API</a></li>
                    </ul>
                </div>

                <div>
                    <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase mb-4">Community</h3>
                    <ul class="space-y-3">
                        <li><a href="#" class="text-gray-500 hover:text-black text-sm transition-colors">Blog</a></li>
                        <li><a href="#" class="text-gray-500 hover:text-black text-sm transition-colors">Help Center</a></li>
                        <li><a href="#" class="text-gray-500 hover:text-black text-sm transition-colors">Guidelines</a></li>
                    </ul>
                </div>

                <div>
                    <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase mb-4">Company</h3>
                    <ul class="space-y-3">
                        <li><a href="#" class="text-gray-500 hover:text-black text-sm transition-colors">About</a></li>
                        <li><a href="#" class="text-gray-500 hover:text-black text-sm transition-colors">Careers</a></li>
                        <li><a href="#" class="text-gray-500 hover:text-black text-sm transition-colors">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>

            <div class="mt-12 pt-8 border-t border-gray-100 flex flex-col md:flex-row justify-between items-center">
                <p class="text-gray-400 text-sm">&copy; @DateTime.Now.Year AIChatApp. All rights reserved.</p>
                <div class="flex space-x-6 mt-4 md:mt-0">
                    <a href="#" class="text-gray-400 hover:text-gray-900">
                        <span class="sr-only">Twitter</span>
                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" /></svg>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-gray-900">
                        <span class="sr-only">GitHub</span>
                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <div id="action-modal" class="fixed inset-0 z-[9999] hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity backdrop-blur-md"></div>
        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                <div class="relative transform overflow-hidden rounded-xl bg-white text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-lg border border-gray-100">
                    <div class="bg-white px-6 pb-6 pt-8 sm:p-8">
                        <div class="sm:flex sm:items-start">
                            <div id="modal-icon-container" class="mx-auto flex h-16 w-16 flex-shrink-0 items-center justify-center rounded-full bg-gray-50 mb-6 sm:mx-0 sm:h-12 sm:w-12 sm:mb-0">
                                <svg class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>

                            <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left sm:flex-1">
                                <h3 class="text-xl font-bold tracking-tight text-gray-900" id="modal-title"></h3>
                                <div class="mt-4">
                                    <p id="modal-message-content" class="text-sm text-gray-600 leading-relaxed"></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 px-6 py-4 flex flex-col-reverse sm:flex-row-reverse sm:px-8 sm:space-x-2 sm:space-x-reverse">
                        <button type="button" id="modal-action-button" class="inline-flex w-full justify-center rounded-md bg-black py-2.5 px-4 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-all duration-200 sm:w-auto">
                            OK
                        </button>
                        <button type="button" id="modal-cancel-button" onclick="closeActionModal()" class="mt-3 inline-flex w-full justify-center rounded-md bg-white py-2.5 px-4 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto focus:outline-none focus:ring-2 focus:ring-gray-300 focus:ring-offset-2 transition-all duration-200">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.razorToastType = '@(TempData["ToastType"]?.ToString() ?? "")';
        window.razorToastMessage = '@(TempData["ToastMessage"]?.ToString() ?? "")';
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (!string.IsNullOrEmpty(successMessage) || !string.IsNullOrEmpty(warningMessage))
    {
        var message = successMessage ?? warningMessage;
        var type = successMessage != null ? "success" : "warning";
        var title = type == "success" ? "Success" : "Action Required";
        var jsonMessage = JsonSerializer.Serialize(message);
        var jsonTitle = JsonSerializer.Serialize(title);

        if (successMessage != null) { TempData.Remove("SuccessMessage"); }
        if (warningMessage != null) { TempData.Remove("WarningMessage"); }

        <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', function () {
                showSimpleToast(@Html.Raw(jsonTitle), @Html.Raw(jsonMessage), '@type');
            });
        </script>
    }
</body>
</html>