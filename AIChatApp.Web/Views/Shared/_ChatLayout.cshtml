<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AIChatApp</title>

    <!-- Main compiled CSS (Tailwind + site styles) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Essential Icons and Fonts -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    @RenderSection("Styles", required: false)
    @RenderSection("HeadMeta", required: false)
</head>
<body class="overflow-hidden text-slate-900 antialiased bg-slate-50 font-['Inter']">
    @RenderBody()

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>