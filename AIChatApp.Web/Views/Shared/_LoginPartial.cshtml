<!-- Login Partial View - Using Custom Cookie Authentication -->
@if (User?.Identity?.IsAuthenticated ?? false)
{
    <span class="text-gray-700 font-medium">Hello @User.Identity?.Name!</span>
}
else
{
    <div class="space-x-4">
        <a asp-controller="Auth" asp-action="Login" class="text-indigo-600 hover:text-indigo-700 font-medium">Sign In</a>
        <a asp-controller="Auth" asp-action="Register" class="text-indigo-600 hover:text-indigo-700 font-medium">Register</a>
    </div>
}
