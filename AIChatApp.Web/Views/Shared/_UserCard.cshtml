@model AIChatApp.Domain.DTOs.UserListDto

<div class="bg-white border border-gray-200 rounded-lg p-5 shadow-sm hover:shadow-md transition-shadow duration-200">
    <div class="flex items-center space-x-4">
        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
        {
            <img src="@Model.ProfileImageUrl" alt="@Model.FullName" class="h-12 w-12 rounded-full object-cover border border-gray-300">
        }
        else
        {
            <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-700 font-bold text-lg border border-indigo-200">
                @Model.FullName.FirstOrDefault()
            </div>
        }
        <div>
            <h4 class="text-md font-bold text-gray-900 leading-tight">@Model.FullName</h4>
            <p class="text-sm text-gray-500">@@@Model.UserName</p>
            <p class="text-xs text-gray-400 mt-1">Joined: @Model.CreatedAt.ToShortDateString()</p>
        </div>
    </div>
</div>